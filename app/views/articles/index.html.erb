<section class="container">
  <div class="search-bar-container">
    <i class="icon icon-mag fa-solid fa-magnifying-glass"></i>
    <%= text_field_tag "search", nil, class: 'search' %>
    <i class="icon icon-mic fa-solid fa-microphone"></i>
  </div>
  <ul id="searches">
    
  </ul>
  <h1 class="display-1">Articles</h1>
  <ul id="articles" class="articles">
    <% @articles.each do |article|%>
      <li class="article">
        <h2><%= article.title %></h2>
        <p><%= article.content %></p>
      </li>
    <% end %>
  </ul>
</section>
